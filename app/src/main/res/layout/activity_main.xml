<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/enter_memory_leak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内存泄漏" />

        <Button
            android:id="@+id/other_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="其它" />

        <Button
            android:id="@+id/enter_video_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="视频播放" />

        <Button
            android:id="@+id/local_video_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="本地播放" />

        <Button
            android:id="@+id/fresco_lib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="图片加载" />

        <Button
            android:id="@+id/small_window_changed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="窗口变化" />

        <com.sunny.androidstu.view.DemoRelativeLayout
            android:layout_width="300dp"
            android:layout_height="100dp">


            <com.sunny.androidstu.view.DemoTextView
                android:id="@+id/demo_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </com.sunny.androidstu.view.DemoRelativeLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>